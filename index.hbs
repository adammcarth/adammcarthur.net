{{!< default}}

<section role="main" id="mogan-content-overview">
  <div class="posts_display_container">
    {{#foreach posts}}
      <article>
        <div class="mogan-post-preview colored-border {{post_class}}" id="post-{{id}}">

          <h2><a href="{{url}}" class="link_to_post">{{title}}</a></h2>

          <div class="content">
            {{content words="79"}}
          </div>

          <!--<a href="{{url}}" class="button accent">Read{{#if tags}} tutorial{{/if}}</a>-->
        </div>
      </article>
    {{/foreach}}

    <div class="clear"></div>
  </div><!-- /.posts_display_container -->

  {{pagination}}
</section>