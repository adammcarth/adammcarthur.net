<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml/DTD/xhtml-transitional.dtd">
<html class="{{body_class}}">
<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <title>Whoops.</title>
  <meta name="description" content="{{meta_description}}" />
  <meta name="HandheldFriendly" content="True" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="shortcut icon" href="{{asset "img/favicon.ico"}}">
  <!-- Stylesheets -->
  <link rel="stylesheet" href="{{asset "css/404.css"}}">
</head>
<body>
  <div class="content" id="content">
    <div class="bg"></div>
    <div class="mountain_balloon" id="mountain_balloon"></div>
    <div class="error_report" id="error_report">
      <h1>{{code}}</h1>
      <p id="error_message">{{message}}</p>
      <a class="btn" href="{{@blog.url}}" title="Visit my homepage to start over.">Return To Front â†’</a>
    </div>
    <div style="clear: both;"></div>
  </div>

  {{ghost_foot}}
  <script type="text/javascript" src="{{asset "js/jquery.easing.1.3.js"}}"></script>
  <script type="text/javascript">
    // Detect window size
    var window_size = window.innerHeight;
    var content_area = document.getElementById("content");
    var content_size = content_area.clientHeight;

    if ( window_size > content_size && window_size - content_size > 50 ) {
      var slack = window_size - content_size;
      var push = slack / 2

      content_area.style.margin = push + "px auto 0 auto";
    }

    // Alternate styles for 500 page
    var code = {{code}};
    if (code === 500) {
      document.body.className += "storm";
      var mountain_balloon = document.getElementById("mountain_balloon");
      var error_report = document.getElementById("error_report");
      var error_message = document.getElementById("error_message");
      mountain_balloon.style.display = "none";
      error_report.style.float = "right";
      error_message['style']['font-size'] = "22px";
      error_message['style']['letter-spacing'] = "1px";
    }

    // Hover fade :)
    $(".mountain_balloon").mouseenter(function() {
      $(this).animate({opacity: 0.7}, 300, "easeOutQuad");
    });

    $(".mountain_balloon").mouseleave(function() {
      $(this).animate({opacity: 1}, 100, "easeOutQuad");
    });
  </script>
</body>
</html>
